# ========================================
# CONFIGURACIÓN PARA PRODUCCIÓN
# ========================================

# Información básica de la aplicación
APP_NAME="Karina's Dashboard"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tu-dominio.com
APP_PORT=80
APP_TIMEZONE="America/Tegucigalpa"

# Configuración de idioma
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_HN

# Configuración de mantenimiento
APP_MAINTENANCE_DRIVER=file

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# BASE DE DATOS
# ========================================
# Para MySQL/MariaDB (recomendado para producción)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=restaurante_dashboard
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_seguro

# Para PostgreSQL (alternativa)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=restaurante_dashboard
# DB_USERNAME=tu_usuario_db
# DB_PASSWORD=tu_password_seguro

# ========================================
# SESIONES Y CACHE
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=tu-dominio.com
SESSION_SECURE_COOKIES=true

CACHE_STORE=database

# ========================================
# COLAS Y BROADCASTING
# ========================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# ========================================
# SISTEMA DE ARCHIVOS
# ========================================
FILESYSTEM_DISK=local

# Para usar S3 (opcional)
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=tu_access_key
# AWS_SECRET_ACCESS_KEY=tu_secret_key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=tu-bucket
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# EMAIL
# ========================================
# Para Gmail SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="tu-email@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# Para SendGrid (alternativa)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=tu_sendgrid_api_key
# MAIL_ENCRYPTION=tls

# Para Mailgun (alternativa)
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=tu-dominio.mailgun.org
# MAILGUN_SECRET=tu_mailgun_secret

# ========================================
# CONFIGURACIÓN DE IMPUESTOS
# ========================================
# ISV en Honduras es 15%
VAT_RATE=0.15

# ========================================
# VITE (para assets)
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# CONFIGURACIÓN ADICIONAL DE SEGURIDAD
# ========================================
# Configuración HTTPS
FORCE_HTTPS=true
ASSET_URL=https://tu-dominio.com

# Configuración de CORS (si usas API)
# SANCTUM_STATEFUL_DOMAINS=tu-dominio.com
# SESSION_DOMAIN=.tu-dominio.com

# ========================================
# CONFIGURACIÓN DE REDIS (opcional)
# ========================================
# Si quieres usar Redis para cache/sesiones
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ========================================
# CONFIGURACIÓN DE MONITOREO (opcional)
# ========================================
# Para Sentry error tracking
# SENTRY_LARAVEL_DSN=https://tu-sentry-dsn

# Para New Relic
# NEW_RELIC_APP_NAME="${APP_NAME}"
# NEW_RELIC_LICENSE_KEY=tu_license_key

# ========================================
# CONFIGURACIÓN DE BACKUP (opcional)
# ========================================
# Para backups automáticos
# BACKUP_MAIL_TO=admin@tu-dominio.com
# BACKUP_MAIL_FROM=backup@tu-dominio.com

# ========================================
# NOTAS IMPORTANTES PARA DEPLOY:
# ========================================
# 1. Genera una APP_KEY nueva: php artisan key:generate
# 2. Ejecuta las migraciones: php artisan migrate --force
# 3. Ejecuta los seeders: php artisan db:seed --force
# 4. Optimiza la aplicación: php artisan optimize
# 5. Configura el cron job para las tareas programadas
# 6. Configura el supervisor para las colas (si usas)
# 7. Configura HTTPS con certificados SSL
# 8. Configura backups automáticos de la base de datos
